{
    "$schema":     "https://schema.tauri.app/config/2",
    "productName": "dci-react",
    "version":     "0.1.3",
    "identifier":  "com.dci-react.app",
    "build":       {
        "beforeDevCommand":   "pnpm dev",
        "devUrl":             "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist":       "../dist"
    },
    "app":         {
        "windows":  [
            {
                "title":  "dci-react",
                "width":  800,
                "height": 600
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle":      {
        "createUpdaterArtifacts": true,
        "active":                 true,
        "targets":                "all",
        "icon":                   [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    },
    "plugins":     {
        "updater": {
            "pubkey":    "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDU1RTNBNjg4OEQ2MEIxNTcKUldSWHNXQ05pS2JqVlhWcjdqN29UT1JPSVVUVHozZm5BSjg0azgraENGSEZkRnVMR0J3U3NaNjcK",
            "endpoints": [
                "https://github.com/d-loki/dci-react/releases/latest/download/latest.json"
            ],
            "windows":   {
                "installMode": "basicUi"
            }
        }
    }
}
